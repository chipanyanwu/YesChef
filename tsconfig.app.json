{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Use "node16" or "nodenext"
    // "allowImportingTsExtensions": true, // Only valid with "node16" or "nodenext"
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true, // Remove this if it conflicts with the root tsconfig.json
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "composite": true
  },
  "include": ["src"]
}